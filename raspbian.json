{
  "variables": {},
  "builders": [
    {
      "type": "arm",
      "file_urls": [
        "http://downloads.raspberrypi.org/raspbian_lite/images/raspbian_lite-2020-02-14/2020-02-13-raspbian-buster-lite.zip"
      ],
      "file_checksum_url": "http://downloads.raspberrypi.org/raspbian_lite/images/raspbian_lite-2020-02-14/2020-02-13-raspbian-buster-lite.zip.sha256",
      "file_checksum_type": "sha256",
      "file_unarchive_cmd": [
        "scripts/raspbian-unarchive.sh",
        "$ARCHIVE_PATH",
        "$MOUNTPOINT"
      ],
      "file_target_extension": "zip",
      "image_build_method": "new",
      "image_path": "raspberry-pi.img",
      "image_size": "4G",
      "image_type": "dos",
      "image_partitions": [
        {
          "name": "boot",
          "type": "c",
          "start_sector": "8192",
          "filesystem": "vfat",
          "size": "256M",
          "mountpoint": "/boot"
        },
        {
          "name": "root",
          "type": "83",
          "start_sector": "532480",
          "filesystem": "ext4",
          "size": "0",
          "mountpoint": "/"
        }
      ],
      "image_chroot_env": [
        "PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"
      ],
      "qemu_binary_source_path": "/usr/bin/qemu-arm-static",
      "qemu_binary_destination_path": "/usr/bin/qemu-arm-static"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/k3s-download.sh"
    }
  ]
}
